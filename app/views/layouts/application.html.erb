<!DOCTYPE html>
<html>
  <head>
    <title>Fractal</title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <div id="app-selector" class="ui sidebar inverted large vertical menu">
      <div class="item">
        <div class="ui huge inverted center aligned header">Select an App</div>
      </div>
      <a class="item" href="<%= url_for(action: 'index', controller: 'task_tracker') %>">
        <div class="ui medium inverted header">
          <i class="icon tasks purple"></i>
          <div class="content">Task Tracker</div>
        </div>
      </a>
      <div class="item">
        <div class="ui tiny inverted sub header">More apps comming soon</div>
      </div>
    </div>
    <div class="pusher">
      <div class="ui large purple inverted secondary menu">
        <div class="item">
          <button id="menu-button" class="ui basic inverted icon button">
            <i class="sidebar icon"></i>
          </button>
        </div>
        <div class="item">
          <a id="menu-logo" class="ui large inverted header" href="<%= url_for(action: 'home', controller: 'welcome') %>">FRACTAL</a>
        </div>
      </div>
      <div class="ui container">
        <div id="app-viewport">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
