<!DOCTYPE html>
<html>
  <head>
    <title>Fractal</title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <div id="app-selector" class="ui sidebar inverted large vertical menu">
      <div class="item">
        <div class="ui huge inverted center aligned header">Select an App</div>
      </div>
      <!--url_for(action: 'index', controller: 'task_tracker')-->
      <a class="item">
        <div class="ui medium inverted header">
          <i class="icon tasks yellow"></i>
          <div class="content">Task Tracker</div>
        </div>
      </a>
      <div class="item">
        <div class="ui tiny inverted sub header">More apps comming soon</div>
      </div>
    </div>
    <div class="pusher">
      <div class="ui large grey inverted secondary menu">
        <div class="item">
          <button id="menu-button" class="ui basic inverted icon button">
            <i class="sidebar icon"></i>
          </button>
        </div>
        <!--url_for(action: 'home', controller: 'welcome')-->
        <div class="item">
          <a id="menu-logo" class="ui large inverted header">FRACTAL</a>
        </div>
        <div class="item right">
          <% if not user_signed_in? %>
            <%= link_to "Login", new_user_session_path, class: 'ui basic blue inverted button menu-button' %>
            <%= link_to "Sign up", new_user_registration_path, class: 'ui green button menu-button' %>
          <% else %>
            <%= link_to "Logout", destroy_user_session_path, method: :delete, class: 'ui red basic inverted button menu-button'  %>
          <% end %>
        </div>
      </div>
      <div class="ui container">
        <% flash.each do |key, value|%>
          <div class="<%= flash_class(key) %>">
            <i class = "close icon"></i><%= value %>
          </div>
        <% end %>
        <div id="app-viewport">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
